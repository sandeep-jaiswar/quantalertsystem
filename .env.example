# =============================================================================
# Quant Alerts System Configuration
# =============================================================================

# Telegram Configuration (REQUIRED)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Get chat ID by messaging your bot and checking https://api.telegram.org/bot<token>/getUpdates
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# Data Storage Configuration
# =============================================================================

# Database Configuration
DATABASE_PATH=./data/quant_alerts.db
# Data retention in days (default: 180)
DATA_RETENTION_DAYS=180

# Data Directory
DATA_DIR=./data

# =============================================================================
# Analysis Configuration  
# =============================================================================

# Stock symbols to analyze (comma-separated)
DEFAULT_SYMBOLS=AAPL,GOOGL,MSFT,TSLA,NVDA,SPY,QQQ,AMZN,META,NFLX
# Historical data lookback period (days)
LOOKBACK_DAYS=60
# Minimum confidence threshold for alerts (0.0-1.0)
MIN_CONFIDENCE_THRESHOLD=0.6
# Maximum number of symbols to process per run
MAX_SYMBOLS_PER_RUN=50

# =============================================================================
# Strategy Configuration
# =============================================================================

# Enable/disable individual strategies
RSI_STRATEGY_ENABLED=true
MA_STRATEGY_ENABLED=true
BOLLINGER_STRATEGY_ENABLED=true
CONSENSUS_STRATEGY_ENABLED=true

# RSI Strategy Parameters
RSI_PERIOD=14
RSI_OVERSOLD_THRESHOLD=30
RSI_OVERBOUGHT_THRESHOLD=70

# Moving Average Strategy Parameters
MA_SHORT=20
MA_LONG=50
MA_VOLUME_MULTIPLIER=1.2

# Bollinger Band Strategy Parameters
BB_PERIOD=20
BB_STD_DEV=2.0
BB_SQUEEZE_THRESHOLD=0.2

# =============================================================================
# Risk Management Configuration
# =============================================================================

# Maximum alerts per symbol per day
MAX_ALERTS_PER_SYMBOL_PER_DAY=3
# Minimum time between similar alerts (minutes)
MIN_ALERT_INTERVAL_MINUTES=60
# Enable position sizing recommendations
ENABLE_POSITION_SIZING=true

# =============================================================================
# Performance & Monitoring Configuration
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
# Log file rotation (days)
LOG_RETENTION_DAYS=30
# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# API Rate Limiting
YAHOO_FINANCE_RATE_LIMIT=100
TELEGRAM_RATE_LIMIT=30

# Timeout configurations (seconds)
DATA_FETCH_TIMEOUT=300
ANALYSIS_TIMEOUT=600
ALERT_SEND_TIMEOUT=30

# =============================================================================
# Development & Testing Configuration
# =============================================================================

# Enable test mode (no real alerts sent)
TEST_MODE=false
# Enable debug features
DEBUG_MODE=false
# Use paper trading data
PAPER_TRADING=false

# =============================================================================
# Advanced Configuration
# =============================================================================

# Environment identifier
ENVIRONMENT=development
# Application version
VERSION=1.0.0
# Deployment identifier
DEPLOYMENT_ID=local

# Health check endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080

# Metrics collection
METRICS_ENABLED=false